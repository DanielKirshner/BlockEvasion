<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="danikir.blockevasion.MainActivity">

    <ImageView
        android:id="@+id/quit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/stats_btn"
        android:layout_marginBottom="51dp"
        android:onClick="exit"
        android:src="@drawable/quit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quit_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:src="@drawable/bottom_right"
        app:srcCompat="@drawable/bottom_right" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quit_btn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:src="@drawable/bottom_left"
        app:srcCompat="@drawable/bottom_left" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_right"
        app:srcCompat="@drawable/top_right"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_left"
        app:srcCompat="@drawable/top_left"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mainmenu_pic"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/play_btn"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:onClick="startGame"
        android:src="@drawable/play"
        android:layout_above="@+id/stats_btn"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/stats_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="runStats"
        android:src="@drawable/stats"
        android:layout_above="@+id/imageView2"
        android:layout_alignStart="@+id/play_btn" />

</RelativeLayout>
